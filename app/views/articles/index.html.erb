    <h1 class="text-center">Articles listing page</h1>
    <% @articles.each do |article| %>
      <div class="card text-center shadow mb-5 bg-white rounded">
        <h5 class="card-header">Featured</h5>
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
          <p class="card-text"><%= truncate(article.discription, length: 100) %></p>
          <%= link_to 'Show', article_path(article.id), class: "btn btn-outline-success" %>
          <%= link_to 'Edit', edit_article_path(article.id), class: "btn btn-outline-info" %>
          <%= link_to 'Delete', article_path(article.id), method: :delete, data: { confirm: "Are you sure" }, class: "btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago,edited <%= time_ago_in_words(article.updated_at) %> ago
          </small>
        </div>
      </div>
    <% end %>
