<h2 class="text-center"><%= @article.title %></h2>
  <div class="card text-center shadow mb-5 bg-white rounded">
    <h5 class="card-header text-muted">by Patryk</h5>
    <div class="card-body">
      <div class="card-text text-start"><%= simple_format(@article.discription) %></div>
      <%= link_to 'Edit', edit_article_path(@article.id), class: "btn btn-outline-info" %>
      <%= link_to 'Delete', article_path(@article.id), method: :delete, data: { confirm: "Are you sure" }, class: "btn btn-outline-danger" %>
    </div>
    <div class="card-footer text-muted">
      <small>Created <%= time_ago_in_words(@article.created_at) %> ago,edited <%= time_ago_in_words(@article.updated_at) %> ago
      </small>
    </div>
  </div>
  <%= link_to 'New', new_article_path, class: "btn btn-outline-success" %>
